{
  "compilerOptions": {
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "declaration": true,
    "downlevelIteration": true,
    "lib": [
      "dom",
      "esnext"
    ],
    "module": "esnext",
    "moduleResolution": "Node",
    "outDir": "./lib",
    "strict": true,
    "target": "esnext",
    "jsx": "react",
    "esModuleInterop": true,
    "allowJs": true
  },
  "include": ["src"],
  "exclude": ["_site"]
}
