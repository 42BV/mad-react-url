      "\\.(ts|tsx)$": "ts-jest"
    },
    "testRegex": "/tests/.*\\.(ts|tsx)$",
    "testPathIgnorePatterns": [
      "./tests/setupTests.ts"
    ],
    "setupFilesAfterEnv": [
      "./tests/setupTests.ts"
    ],
    "testURL": "http://localhost"
